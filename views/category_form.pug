extends layout 

block content 
  h1 #{title}

  form(method='POST' action='')
    div.form-row
      label(for='name') Category:
      input#name.form-control(type='text', placeholder='Chairs, Tables, etc.' name='name' value=(undefined===genre ? '' : genre.name))
    button(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg

