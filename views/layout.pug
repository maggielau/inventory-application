doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div(class='main')
      div(class='hero') Hero image here
      div(class='sidebar')
        block sidebar
          ul(class='sidebar-nav')
            li 
              a(href='/catalog') Home 
            li
              a(href='/catalog/products') All Products 
            li 
              a(href="/catalog/categories") All Product Categories 
            li 
              hr
            li 
              a(href="/catalog/product/create") Create New Product 
            li 
              a(href="/catalog/category/create") Create New Product Category 
            li 
              hr
            li
              if currentUser 
                a(href="/catalog/logout") Log Out 
              else 
                a(href="/catalog/login") Log In 
            li 
              if !currentUser 
                a(href="/catalog/signup") Sign Up 

      div(class='content')
        if currentUser
          block content
        else 
          h2 Please log in or sign up to continue
        block publicContent